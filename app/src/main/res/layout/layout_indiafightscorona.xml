<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvFragHomeIndia"
        style="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#India"
        android:textColor="#FF9933"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/tvFragHomeFights"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tvFragHomeFights"
        style="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fights"
        android:textColor="@color/blue_and_white"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/tvFragHomeCorona"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvFragHomeIndia"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tvFragHomeCorona"
        style="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Corona"
        android:textColor="#138808"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvFragHomeFights"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
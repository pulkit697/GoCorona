<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:backgroundTint="@color/white"
    tools:context=".ui.fragments.HomeFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvFragHomeCityCases"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toStartOf="@+id/cvFragHomeCountryCases"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/tvFragHomeCityCases"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="1,30,000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvFragHomeCityCases"
                android:text="Muzaffarnagar" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvFragHomeCountryCases"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cvFragHomeCityCases"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/tvFragHomeCountryCases"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="1,45,30,000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvFragHomeCountryCases"
                android:text="India" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivFragHomeGetOxygen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/o2_cylinder"
        android:scaleType="center"
        android:padding="25dp"
        app:layout_constraintDimensionRatio="1"
        android:contentDescription="see nearly availability of oxygen cylinders"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.CircularImageView"
        app:layout_constraintBottom_toTopOf="@id/glFragHomeHorizontalSeparation"
        app:layout_constraintEnd_toStartOf="@+id/ivFragHomeHospitalBed"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cvFragHomeCityCases" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivFragHomeHospitalBed"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/hospital_bed"
        android:scaleType="center"
        android:padding="25dp"
        android:contentDescription="check availability of vacant hospitals beds nearby"
        app:layout_constraintDimensionRatio="1"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.CircularImageView"
        app:layout_constraintBottom_toTopOf="@id/glFragHomeHorizontalSeparation"
        app:layout_constraintEnd_toStartOf="@id/iv02"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivFragHomeGetOxygen"
        app:layout_constraintTop_toBottomOf="@id/cvFragHomeCityCases" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv02"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/x_ray_color"
        android:scaleType="center"
        android:padding="25dp"
        app:layout_constraintDimensionRatio="1"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.CircularImageView"
        app:layout_constraintBottom_toTopOf="@id/glFragHomeHorizontalSeparation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivFragHomeHospitalBed"
        app:layout_constraintTop_toBottomOf="@id/cvFragHomeCountryCases" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glFragHomeHorizontalSeparation"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintGuide_percent="0.35"
        android:orientation="horizontal"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv10"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/corona_graph"
        android:scaleType="center"
        android:padding="25dp"
        app:layout_constraintDimensionRatio="1"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.CircularImageView"
        app:layout_constraintBottom_toTopOf="@+id/iv20"
        app:layout_constraintEnd_toStartOf="@+id/iv11"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/glFragHomeHorizontalSeparation"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv11"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/corona_graph"
        android:scaleType="center"
        android:padding="25dp"
        app:layout_constraintDimensionRatio="1"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.CircularImageView"
        app:layout_constraintBottom_toTopOf="@+id/iv21"
        app:layout_constraintEnd_toStartOf="@+id/iv12"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv10"
        app:layout_constraintTop_toBottomOf="@id/glFragHomeHorizontalSeparation" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv12"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/corona_graph"
        android:scaleType="center"
        android:padding="25dp"
        app:layout_constraintDimensionRatio="1"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.CircularImageView"
        app:layout_constraintBottom_toTopOf="@+id/iv22"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv11"
        app:layout_constraintTop_toBottomOf="@id/glFragHomeHorizontalSeparation" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv20"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/corona_graph"
        android:scaleType="center"
        android:padding="25dp"
        app:layout_constraintDimensionRatio="1"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.CircularImageView"
        app:layout_constraintBottom_toBottomOf="@id/glFragHomeHorizontalBelowGrid"
        app:layout_constraintEnd_toStartOf="@+id/iv21"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv10" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv21"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/corona_graph"
        android:scaleType="center"
        android:padding="25dp"
        app:layout_constraintDimensionRatio="1"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.CircularImageView"
        app:layout_constraintBottom_toBottomOf="@id/glFragHomeHorizontalBelowGrid"
        app:layout_constraintEnd_toStartOf="@+id/iv22"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv20"
        app:layout_constraintTop_toBottomOf="@+id/iv11" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv22"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/corona_graph"
        android:scaleType="center"
        android:padding="25dp"
        app:layout_constraintDimensionRatio="1"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.CircularImageView"
        app:layout_constraintBottom_toBottomOf="@id/glFragHomeHorizontalBelowGrid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv21"
        app:layout_constraintTop_toBottomOf="@+id/iv12" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glFragHomeHorizontalBelowGrid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.70"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".ui.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="0dp"
        app:elevation="0dp"
        android:paddingBottom="1px"
        android:background="@color/black"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:src="@mipmap/app_icon"
            android:background="@color/white"
            android:padding="10dp"
            />
        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/app_name"
            app:titleTextColor="@color/black"
            android:background="@color/white"
            android:elevation="0dp"
            />
    </LinearLayout>
    <fragment
        android:id="@+id/fragMainActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:name="androidx.navigation.fragment.NavHostFragment"
        app:navGraph="@navigation/nav_bottom_bar_main"
        app:defaultNavHost="true"
        />
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/cl_bottom_bar_main"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >
        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bab_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:fabCradleMargin="10dp"
            app:fabCradleRoundedCornerRadius="20dp"
            android:backgroundTint="@color/purple_700"
            >
            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bnb_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                android:background="@android:color/transparent"
                app:menu="@menu/nav_bar_menu"/>
        </com.google.android.material.bottomappbar.BottomAppBar>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabBottomBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="navigateToXrayScanFragment"
            android:src="@drawable/x_ray_black"
            app:layout_anchor="@id/bab_main"
            android:backgroundTint="@color/purple_700"
            app:backgroundTint="@color/purple_500"
            />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>
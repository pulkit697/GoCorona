<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="5dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvDose1CountRV"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="4444444"
        android:textSize="14sp"
        android:layout_marginEnd="2dp"
        android:gravity="end"
        app:layout_constraintEnd_toStartOf="@id/tvDose2CountRV"
        app:layout_constraintTop_toTopOf="@id/tvDose2CountRV" />

    <TextView
        android:id="@+id/tvDose2CountRV"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="4444444"
        android:textSize="14sp"
        android:gravity="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvStateNameVaccineRV"
        app:layout_constraintBottom_toBottomOf="@id/tvStateNameVaccineRV"/>
    <TextView
        android:id="@+id/tvStateNameVaccineRV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Andaman and Nicobar Islands"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvDose1CountRV"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="14sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
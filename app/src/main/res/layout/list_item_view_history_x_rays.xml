<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/solid_border"
    android:layout_margin="5dp"
    android:paddingVertical="5dp"
    >

    <ImageView
        android:id="@+id/ivFragListHistoryCTScan"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/sample_ct_scan"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@id/tvFragListHistorySeriousTreatment"
        />
    <TextView
        android:id="@+id/tvFragListHistoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ivFragListHistoryCTScan"
        />
    <TextView
        android:id="@+id/tvFragListHistoryDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:layout_marginVertical="5dp"
        app:layout_constraintLeft_toLeftOf="@id/tvFragListHistoryName"
        app:layout_constraintTop_toBottomOf="@id/tvFragListHistoryName"/>
    <TextView
        android:id="@+id/tvFragListHistoryAllOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Absolutely Okay: 80%"
        android:layout_marginVertical="5dp"
        app:layout_constraintLeft_toLeftOf="@id/tvFragListHistoryName"
        app:layout_constraintTop_toBottomOf="@id/tvFragListHistoryDate"/>
    <TextView
        android:id="@+id/tvFragListHistoryNeedsMedication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Needs medication: 17%"
        android:layout_marginVertical="2dp"
        app:layout_constraintLeft_toLeftOf="@id/tvFragListHistoryName"
        app:layout_constraintTop_toBottomOf="@id/tvFragListHistoryAllOk"/>
    <TextView
        android:id="@+id/tvFragListHistorySeriousTreatment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Needs Serious treatment: 3%"
        android:layout_marginVertical="2dp"
        app:layout_constraintLeft_toLeftOf="@id/tvFragListHistoryName"
        app:layout_constraintTop_toBottomOf="@id/tvFragListHistoryNeedsMedication"/>

    <ImageView
        android:id="@+id/ivFragListHistoryMLReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_check_green"/>

</androidx.constraintlayout.widget.ConstraintLayout>